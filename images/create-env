#!/bin/bash

git clone https://github.com/sergiocazzolato/validator.git

sudo apt update
sudo apt install -y ubuntu-image awscli snapcraft

# run -> aws configure
# run -> snapcraft login

cd validator/images
sudo cp image-generator.service /etc/systemd/system/
sudo cp image-generator.timer /etc/systemd/system/
sudo systemctl daemon-reload

sudo systemctl enable image-generator.timer image-generator.service

